
JWT_SECRET=a_super_strong_secret
JWT_EXPIRES_IN=1h

API_TOKEN=a_super_secret_token
PROMETHEUS_PREFIX=socket_server

# Server Configuration
NODE_ENV=development
PORT=3000
Debug=false

USER_KEY_PREFIX=socker:user

# Storage Configuration
# Set to true to use Redis, false for local cache
USE_REDIS=false

# Redis Configuration (only used when USE_REDIS=true)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Storage TTL and Intervals (in seconds)
STORAGE_TTL=3600          # 1 hour - how long user data persists
HEARTBEAT_INTERVAL=300000 # 5 minutes - heartbeat interval in ms
CLEANUP_INTERVAL=600000   # 10 minutes - cleanup interval in ms
MAX_INACTIVE_TIME=1800000 # 30 minutes - max inactive time in ms

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=*
