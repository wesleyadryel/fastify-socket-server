
JWT_SECRET=a_super_strong_secret
JWT_EXPIRES_IN=1h

API_TOKEN=a_super_secret_token
PROMETHEUS_PREFIX=socket_server

# Server Configuration
NODE_ENV=development
PORT=3000
Debug=false

USER_KEY_PREFIX=socker:user

# Storage Configuration
# Set to true to use Redis, false for local cache
USE_REDIS=false

# Redis Configuration (only used when USE_REDIS=true)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Storage TTL and Intervals (in seconds)
STORAGE_TTL=172800          # 48 hours - how long user data persists

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=*
