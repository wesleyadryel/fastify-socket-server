{
  "name": "socket",
  "author": "wesley",
  "license": "MIT",
  "version": "1.0.0",
  "description": "Fastify Socket.IO Gateway",
  "main": "dist/index.js",
  "scripts": {
    "build": "npx esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --target=node20 --external:socket.io",
    "build:watch": "npx esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --target=node20 --external:socket.io --watch",
    "start": "node dist/index.js",
    "dev": "cross-env NODE_ENV=development npx ts-node src/index.ts",
    "dev:log": "cross-env Debug=true ts-node src/index.ts",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint ./src --ext .ts",
    "format": "prettier --write ./src"
  },
  "devDependencies": {
    "@scalar/fastify-api-reference": "^1.34.2",
    "@types/bcryptjs": "^3.0.0",
    "@types/dotenv": "^8.2.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.17.46",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "cross-env": "^10.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^30.0.5",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.0",
    "socket.io-client": "^4.8.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^12.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/under-pressure": "^9.0.3",
    "@socket.io/admin-ui": "^0.5.1",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.5.0",
    "fastify": "^5.4.0",
    "fastify-metrics": "^12.1.0",
    "fastify-plugin": "^5.0.1",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "prom-client": "^15.1.3",
    "socket.io": "^4.8.1",
    "uuid": "^13.0.0",
    "zod": "^4.0.17"
  }
}